<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Help GuideLines"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:typeface="sans"
                android:textAlignment="center"
                android:padding="30dp"
                android:id="@+id/tv"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1.Using the Background color picker you can change the color of the screen"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textStyle="italic"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2.Using the marker color picker you can change the color of the marker(finger touch)"
            android:id="@+id/textView3"
            android:textStyle="italic"
            android:textSize="30sp"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3.Using the clear option you can clear the screen"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:text="4.By taking the ScreenShot ,your drawn image will be stored in gallery,you can easily share your drawing"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</LinearLayout>
    </ScrollView>

